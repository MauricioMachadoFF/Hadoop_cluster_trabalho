<!-- Put site-specific property overrides in this file. -->

<configuration>
    <!-- Fator de replicação - número de cópias de cada bloco -->
    <property>
        <name>dfs.replication</name>
        <value>2</value>
        <description>Número de réplicas dos blocos (2 workers disponíveis)</description>
    </property>

    <!-- Diretório do NameNode -->
    <property>
        <name>dfs.namenode.name.dir</name>
        <value>file:///hadoop/dfs/name</value>
        <description>Diretório onde o NameNode armazena metadados</description>
    </property>

    <!-- Diretório do DataNode -->
    <property>
        <name>dfs.datanode.data.dir</name>
        <value>file:///hadoop/dfs/data</value>
        <description>Diretório onde os DataNodes armazenam blocos</description>
    </property>

    <!-- Porta HTTP do NameNode -->
    <property>
        <name>dfs.namenode.http-address</name>
        <value>0.0.0.0:9870</value>
        <description>Endereço da interface web do NameNode</description>
    </property>

    <!-- Endereço RPC do NameNode -->
    <property>
        <name>dfs.namenode.rpc-address</name>
        <value>hadoop-master:9000</value>
        <description>Endereço RPC do NameNode</description>
    </property>

    <!-- Permissões -->
    <property>
        <name>dfs.permissions.enabled</name>
        <value>false</value>
        <description>Desabilita verificação de permissões para simplificar</description>
    </property>

    <!-- Webhdfs -->
    <property>
        <name>dfs.webhdfs.enabled</name>
        <value>true</value>
        <description>Habilita API REST do HDFS</description>
    </property>
</configuration>
